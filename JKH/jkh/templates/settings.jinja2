{% extends 'my_template.jinja2' %}
{% block content %}
    <center>
        <form method="post">
            <h2>Сменить пароль</h2>

            <p><b>Введите новый пароль:</b><br>
                <input type="password" size="40" name="password">
                <br><input type="submit" class="button" value="Сменить пароль">
                <br>

            <h3>{{ Messege }}</h3>
        </form>
